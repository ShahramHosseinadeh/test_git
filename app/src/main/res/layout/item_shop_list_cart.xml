<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_shop_list_cart_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_shop_list_cart_cover"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/pic_profile" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_shop_list_cart_title"
        android:layout_width="150dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toEndOf="@id/cv_shop_list_cart_pic"
        app:layout_constraintTop_toTopOf="@id/cv_shop_list_cart_pic"
        android:fontFamily="@font/josefinsans_bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:text="JBL Tune 750.."
        android:textColor="@color/white"
        android:textSize="22sp"/>
    
    <TextView
        android:id="@+id/tv_shop_list_cart_price"
        android:layout_width="60dp"
        android:layout_height="26dp"
        android:text="$240"
        android:textColor="@android:color/darker_gray"
        android:textSize="20sp"
        android:fontFamily="@font/josefinsans_bold"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@id/tv_shop_list_cart_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_shop_list_cart_title"/>

    <TextView
        android:id="@+id/tv_shop_list_cart_quantity"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:text="Quantity : 1"
        android:fontFamily="@font/josefinsans_bold"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="@id/tv_shop_list_cart_title"
        app:layout_constraintTop_toBottomOf="@id/tv_shop_list_cart_title"
        android:layout_marginTop="18dp"
        android:textSize="18sp" />


</androidx.constraintlayout.widget.ConstraintLayout>