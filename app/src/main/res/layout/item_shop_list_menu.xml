<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_fragment_menu_first"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="60dp"
        android:layout_margin="12dp"
        android:backgroundTint="#1f1f1f"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_shop_list_menu_cover"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_shop_list_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/cv_fragment_menu_first"
        app:layout_constraintEnd_toEndOf="@id/cv_fragment_menu_first"
        app:layout_constraintTop_toBottomOf="@id/cv_fragment_menu_first"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/josefinsans_bold"/>


</androidx.constraintlayout.widget.ConstraintLayout>