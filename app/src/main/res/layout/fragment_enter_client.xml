<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/enter_client_pic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_fragment_enter_client_hi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="230dp"
        android:fontFamily="@font/josefinsans_bold"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="555dp"
        android:alpha="0.25"
        android:backgroundTint="@android:color/darker_gray"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_fragment_enter_client_hi" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="370dp"
        android:layout_height="555dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_fragment_enter_client_hi">

        <EditText
            android:id="@+id/et_fragment_enter_client_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:alpha="0"
            android:background="@drawable/bg_et"
            android:fontFamily="@font/josefinsans_bold"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_fragment_enter_client_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:alpha="0"
            android:backgroundTint="#defe71"
            android:fontFamily="@font/josefinsans_bold"
            android:padding="15dp"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/et_fragment_enter_client_email" />

        <TextView
            android:id="@+id/tv_fragment_enter_client_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="or"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_fragment_enter_client_continue" />

        <Button
            android:id="@+id/btn_fragment_enter_client_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:alpha="0"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#E6F8F2"
            android:drawableLeft="@drawable/ic_facebook_icon"
            android:fontFamily="@font/josefinsans_bold"
            android:padding="15dp"
            android:text="Continue with Facebook"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_fragment_enter_client_or" />

        <Button
            android:id="@+id/btn_fragment_enter_client_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#E6F8F2"
            android:drawableLeft="@drawable/ic_google_icon"
            android:fontFamily="@font/josefinsans_bold"
            android:padding="15dp"
            android:alpha="0"
            android:text="Continue with Google"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_fragment_enter_client_facebook" />

        <Button
            android:id="@+id/btn_fragment_enter_client_apple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#E6F8F2"
            android:drawableLeft="@drawable/ic_apple_icon"
            android:fontFamily="@font/josefinsans_bold"
            android:padding="15dp"
            android:text="Continue with Apple"
            android:textAllCaps="false"
            android:alpha="0"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_fragment_enter_client_google" />

        <TextView
            android:id="@+id/tv_fragment_enter_client_do_not_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/josefinsans_bold"
            android:text="Dont have an account?"
            android:textColor="@color/white"
            android:alpha="0"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_fragment_enter_client_apple" />

        <TextView
            android:id="@+id/tv_fragment_enter_client_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/josefinsans_bold"
            android:text="Sign up"
            android:textColor="#defe71"
            android:alpha="0"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_fragment_enter_client_do_not_account"
            app:layout_constraintStart_toEndOf="@id/tv_fragment_enter_client_do_not_account"
            app:layout_constraintTop_toTopOf="@id/tv_fragment_enter_client_do_not_account" />

        <TextView
            android:id="@+id/tv_fragment_enter_client_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/josefinsans_bold"
            android:text="Forget your password?"
            android:textColor="#defe71"
            android:textSize="18sp"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_fragment_enter_client_do_not_account" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>