<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TEst_7" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowFullscreen">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/oswald_regular</item>
    </style>

    <style name="RoundedImageView" parent="">
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    <style name="RoundedImageView2" parent="">
        <!--<item name="cornerFamilyTopRight">rounded</item>-->
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>

    <style name="RoundedImageView3" parent="">
        <item name="cornerSize">20dp</item>
    </style>

    <!--cardView fragment detail home-->
    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/bgCvFragmentDetailHome</item>
    </style>

    <style name="CustomCardViewStyle2" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/bgCvFragmentDetailHome2</item>
    </style>

    <style name="bgCvFragmentDetailHome" parent="">
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
    </style>

    <style name="bgCvFragmentDetailHome2" parent="">
        <item name="cornerSizeTopRight">50dp</item>
        <item name="cornerSizeTopLeft">50dp</item>
    </style>

    <!--imageViews products-->
    <style name="RoundedImageView4" parent="">
        <item name="cornerSize">30dp</item>
    </style>

    <!--Button bag-->
    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
        <item name="cornerSizeBottomRight">32dp</item>
        <item name="cornerSizeTopRight">32dp</item>
    </style>

    <!---->
    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/josefinsans_bold</item>
        <item name="android:fontFamily">@font/josefinsans_bold</item>
    </style>
    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/josefinsans_bold</item>
        <item name="android:fontFamily">@font/josefinsans_bold</item>
        <item name="android:textSize">22sp</item>
    </style>
</resources>